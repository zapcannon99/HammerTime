<%- include("partials/head", {title: "HammerTime", css: ['index.css','navbar.css','searchbar.css']})%>
<%- include("partials/navbar") %>

<div align="center">
  <img class="logo" src="./images/logo.png"></img>
</div>

<%- include("partials/search") %>

<div align="center">
  <div class = "flex-down no-top" style="padding:10px; background-color:#cccccc; border:2px solid black; border-radius:25px;margin-bottom:10px">
    <div class = "heading">My Bids:</div>
    <div class = "flex-across">
    <% listings.forEach(function(listing){ %>
      <div class="card grow">
        <a href="/listings/<%= listing._id %>"><span style="position:absolute; width:100%; height:100%; top:0; left: 0; z-index: 10;"></span></a>
        <img class = "card-image" src="./images/db/<%= listing.pictures[0] %>">
        <div class="block-ellipsis"><%= listing.title %></div>
        <div class="price"><%= "$"+listing.bid %></div>
      </div>
    <% }) %>
    </div>
</div>

  <div class = "flex-down no-top" style="padding:10px; background-color:#cccccc; border:2px solid black; border-radius:25px;margin-bottom:10px">
    <div class = "heading">All Listings:</div>
    <div class = "flex-across">
    <% listings.forEach(function(listing){ %>
      <div class="listings-container card grow">
        <a href="/listings/<%= listing._id %>"><span style="position:absolute; width:100%; height:100%; top:0; left: 0; z-index: 10;"></span></a>
        <img class = "card card-holder" src="<%= listing.pictures[0] %>">
        <div class="price"><strong><%= "$"+listing.bid %></strong></div>
      </div>
    <% }) %>
    </div>
  </div>

</div>


<%- include("partials/footer") %>

</body>
</html>
